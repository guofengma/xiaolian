<!--pages/submit/submit.wxml-->
<view class="container">
  <form bindsubmit="formSubmit">
    <view class="logo">
        <image class="img" src="../../image/logo.png"></image>
    </view>
    <view class="content">
        <view class="mobile">
            <image src="../../image/mobile.png"></image>
            <input maxlength="11" type="number" placeholder="手机号" />
        </view>
        <view class="password">
            <image src="../../image/pwd.png"></image>
            <input maxlength="6" type="number" placeholder="密码" />
        </view>
    </view>
    <button>登录</button>
  </form>
</view>