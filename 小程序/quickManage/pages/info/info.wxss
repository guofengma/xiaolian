/* pages/info/info.wxss */
.container{
    padding: 76rpx 20rpx 0;
}
.content{
    background-color: #fff;
    padding: 62rpx 40rpx;
}
.item{
    margin-bottom: 54rpx;
}
.item .title{
    margin-bottom: 32rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #0D8FEF;
    letter-spacing: -0.24px;
}
.item .inputs{
    position: relative;
}
.item .inputs:after{
    content: '';
    display: block;
    position: absolute;
    background-color: #ddd;
    height: 1px;
    left: 0;
    right: 0;
    bottom: 0;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}

button{
    width: 520rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #0D8FEF;
    color: #fff;
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    letter-spacing: -0.39px;
}
button:after{
    width: 0;
    height: 0;
    border: none;
}