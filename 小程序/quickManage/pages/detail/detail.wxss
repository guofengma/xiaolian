/* pages/detail/detail.wxss */
.container .header{
    background-color: #0D8FEF;
    padding: 60rpx 32rpx;
    color: #ffffff;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.container .header .left{
    width: 446rpx;
}
.container .header .left .name{
    font-size: 36rpx;
    margin-bottom: 20rpx;
}
.container .header .left .address{
    font-size: 28rpx;
    line-height: 34rpx;
}
.container .header image{
    width: 150rpx;
    height: 134rpx;
}

/*center部分*/
.center{
    margin-top: 20rpx;
    /*padding: 0 40rpx;*/
    background-color: #fff;
}

.center .title{
    font-size: 32rpx;
    line-height: 76rpx;
    font-weight: bold;
    position: relative;
    padding-left: 32rpx;
}
.center .title:after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #ddd;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}

.center .item{
    padding: 32rpx;
    position: relative;
}
.center .item:after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #ddd;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}
.center .item .top,.center .item .bottom{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.center .item .bottom{
    margin-top: 32rpx;
    color: #999999;
}
.center .total{
    text-align: right;
    padding: 38rpx 32rpx;
    position: relative;
}
.center .total:after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #ddd;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}

/*footer部分*/
.footer{
    padding: 32rpx;
    margin-top: 20rpx;
    overflow: hidden;
    background-color: #fff;
    position: relative;
    font-size: 28rpx;
}
.footer:before{
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #ddd;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}
.footer:after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #ddd;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}
.footer .orderno{
    margin-bottom: 16rpx;
    font-size: 28rpx;
}