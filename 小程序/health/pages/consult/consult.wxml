<!--pages/consult/consult.wxml-->
<view class="container">
  <!--医生列表-->

  <scroll-view 
  scroll-y
  scroll-top="{{scrollTop}}"  
  style="height:{{scrollHeight}}px;" class="list"                         enable-back-to-top=true 
  bindscrolltolower="bindDownLoad" 
  bindscroll="scroll" 
  bindscrolltoupper="refreshs"
  enable-back-to-top="true"
  >
    <view class="contact">
      <button open-type="contact">我要咨询</button>
      <view class="word">每天30000个问题被专业医生解答</view>
    </view>
    <view class="content">
      <view class="head">患者病例</view>
      <view class="diagList" wx:for="{{diagList}}">
        <view class="top">
          <view class="eval">
          <view class="evalItem" wx:for="{{evalues}}" wx:for-index="index">
                <image data-idx="{{index}}" bindtap="bindEvalTap" src="{{item.starUrl}}"></image>
              </view></view>
          <view class="time">{{item.datetime}}</view>
        </view>
        <view class="info">
          <view class="classname">医院：{{item.hospital}}</view>
          <view class="classname">医生：{{item.doctor}}</view>
        </view>
        <view class="desc">
          <view class="descTit">症状描述</view>
          <view class="descont">{{item.symptom}}</view>
        </view>
        <view class="label">
          <text>皮肤病</text>
          <text>皮肤病</text>
        </view>
        <button class="shareBtn" open-type="share" type="default">
          <image class="share" src="../../image/share.png"></image>
        </button>
      </view>
      <view class="loading">{{loadingMsg}}</view>
    </view>
    
  </scroll-view>
  
</view>