/* pages/consult/consult.wxss */
/*搜索框*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.container{
  height: 100%;
  /*padding-bottom: 100rpx;*/
  color: #333333;
}
.search{
  padding:20rpx 20rpx 0 20rpx;
}
.search input{
  height: 55rpx;
  background-color: white;
  border-radius: 5px;
  text-align: center;
}
.container .contact{
  background-color: rgba(255, 87, 34, .7);
  overflow: hidden;
  padding-bottom: 50rpx;
}
.container .contact .bord{
  width: 230rpx;
  height: 230rpx;
  border-radius: 120rpx;
  background-color: rgba(255, 255, 255, .2);
  color: orangered;
  border-color: white;
  border: none;
  margin: 30rpx auto 0;
  outline: none;
  outline-color: white;
  padding: 10rpx;
}
.container .contact button{
  width: 100%;
  height: 100%;
  border-radius: 115rpx;
  background-color: white;
  color: orangered;
  border-color: white;
  border: none;
  line-height: 230rpx;
  font-size: 40rpx;
  outline: none;
  outline-color: white;
}
.container .contact button:after{
  border: none;
}
.container .word{
  text-align: center;
  /*margin-top: 20rpx;*/
  line-height: 118rpx;
  color: #ffffff;
}

.container .content{
  padding: 28rpx 28rpx 0 28rpx;
}

.container .content .head{
  line-height: 90rpx;
  border-bottom: 1px #e3e3e3 solid;
  font-size: 34rpx;
}
.container .content .diagList{
  padding: 28rpx 0;
  position: relative;
}
.container .content .diagList:after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: #dddddd;
    height: 1px;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}
.container .content .diagList .top,.container .content .diagList .info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}
.container .content .diagList .top .time{
  color: #BBBBBB;
}
.container .content .diagList .top .eval{
  color: #ff5722;
}
.container .content .diagList .top .eval .evalItem{
  display: inline-block;
}
.container .content .diagList .top image{
  width: 35rpx;
  height: 33rpx;
  margin-right: 8rpx;
}
.container .content .diagList .desc{
  margin-bottom: 30rpx;
}
.container .content .diagList .desc .descTit{
  margin-bottom: 16rpx;
}
.container .content .diagList .desc .descont{
  margin-bottom: 16rpx;
  color: #666666;
}
.container .content .diagList .label .labs{
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  margin-right: 14rpx;
  background-color: rgba(255, 87, 34, .3);
  color: #ff5722;
  border-radius: 3px;
  padding: 0 10rpx;
  font-size: 24rpx;
}
.container .content .diagList .shareBtn{
  width: 50rpx;
  height: 50rpx;
  padding: 10rpx;
  position: absolute;
  bottom: 12rpx;
  right: 4rpx;
  /*background-color: white;*/
  border-radius: 0px;
  border-color: red;
  box-sizing: border-box;
  background-color: transparent;
}
.container .content .diagList .shareBtn:after{
  border:none;
}
.container .content .diagList .share{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 0px;
  top: 0px;
  z-index: 100;
  border: 1px #fff solid;
  /*padding: 8rpx;
  position: absolute;
  bottom: 6rpx;
  right: 2rpx;*/
}
/*医师列表*/
.docItem{
  background-color: #ffffff;
  margin-top: 20rpx;
  padding:30rpx;
}
.docItem:last-of-type{
  background-color: #ffffff;
  margin-top: 20rpx;
  margin-bottom: 100rpx;
}

.docItem .head{
  display: flex;
  display: -webkit-flex;
}

.docItem .head .avator{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
}

.docItem .head .avator image{
  width: 100%;
  height: 100%;
}

.docItem .head .headR{
  width: 80%;
  margin-left: 26rpx;
  padding-top: 10rpx;
}

.docItem .head .headR .name{
  margin-right: 50rpx;
}
.docItem .head .headR .headRD{
  padding: 15rpx 0;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}

/*疾病列表*/
.ill{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap:wrap;
}
.illItem{
  width: 320rpx;
  text-align: center;
  margin-top: 50rpx;
  background-color: #fff;
}
.illItem:nth-of-type(2n+1){
  margin-left:30rpx;
}
.illItem:nth-of-type(2n){
  margin-right:30rpx;
}
.illItem .illImg image{
  width: 100%;
  height: 220rpx;
}
.illItem .illName{
  background-color: #fff;
}

.loading{
  text-align: center;
  margin-top: 50rpx;
  padding: 0 0 30rpx;
}