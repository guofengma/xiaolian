/* pages/userInfo/userInfo.wxss */
.tip {
  text-align: center;
  background-color: whitesmoke;
  width: 100%;
  height: 40rpx;
  font-size: 32rpx;
  color: #ff5722;
}
.container{
  height: 100vh;
  background-color: #f7f7f7;
  overflow: hidden;
}

.container .elem{
  margin-top: 20rpx;
  width: 100%;
  background-color: #fff;
}

.container .elem .item{
  position: relative;
  margin-left:30rpx;
  height: 110rpx;
}

.container .elem .item:first-of-type:after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: #dddddd;
    height: 1px;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}

.container .elem .item .tit{
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.container .elem input{
  color: #999999;
  text-align: left;
  position: absolute;
  left: 114rpx;
  top: 50%;
  height: 1em;
  line-height: 1em;
  transform: translateY(-50%);
}
.container .elem .butn{
  color: #ff5722;
  position: absolute;
  right: 30rpx;
  border-left:1px #ff5722 solid;
  border-right:1px #ff5722 solid;
  border-radius: 4rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 8rpx 6rpx;
  text-align: center;
}
.container .elem .butn:after{
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  transform: translateY(.5);
  background-color: #ff5722;
}
.container .elem .butn:before{
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  transform: translateY(.5);
  background-color: #ff5722;
}