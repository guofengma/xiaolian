/* pages/userInfo/userInfo.wxss */
.tip {
  text-align: center;
  background-color: whitesmoke;
  width: 100%;
  height: 40rpx;
  font-size: 32rpx;
  color: #ff5722;
  line-height: 50rpx;
}
.dialog{
  width: 100%;
  position: absolute;
  z-index: 100;
  height: 100vh;
  background: rgba(0, 0, 0, .3)
}

.dialog .content{
  width: 460rpx;
  height: 500rpx;
  background-color: white;
  overflow: hidden;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 4px;
}
.dialog .content .title{
  text-align: center;
  color: #ff5722;
  font-size: 32rpx;
  margin: 70rpx 0 60rpx;
  font-weight: bold;
}
.dialog .content .logo{
  text-align: center;
}
.dialog .content image{
  width: 80rpx;
  height: 80rpx;
}
.dialog .content .choose{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.dialog .content .info{
  width: 100%;
  position: absolute;
  bottom: 130rpx;
  text-align: center;
  color: #666666;
  font-size: 28rpx;
}
.dialog .content .choose:after{
  position: absolute;
  content: "";
  height: 1px;
  background-color: #dddddd;
  width: 100%;
  right: 0;
  top: 0;
  left: 0;
}
.dialog .content .choose .item{
  height: 100%;
  width: 50%;
  text-align: center;
  line-height: 100rpx;
  position: relative;
  font-size: 28rpx;
}
.dialog .content .choose .item:first-of-type:after{
  position: absolute;
  content: "";
  width: 1px;
  background-color: #dddddd;
  height: 100px;
  right: 0;
  top: 0;
  bottom: 0;
}
.container{
 
  height: 100vh;
  background-color: #f7f7f7;
  overflow: hidden;
}

.container .elem{
  margin-top: 20rpx;
  width: 100%;
  background-color: #fff;
}

.container .elem .item{
  position: relative;
  margin-left:30rpx;
  height: 110rpx;
}

.container .elem .item:first-of-type:after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: #dddddd;
    height: 1px;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}

.container .elem .item .tit{
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.container .elem input{
  color: #999999;
  text-align: left;
  position: absolute;
  left: 114rpx;
  top: 50%;
  height: 1em;
  line-height: 1em;
  transform: translateY(-50%);
}
.container .elem .butn{
  color: #ff5722;
  position: absolute;
  right: 30rpx;
  border-left:1px #ff5722 solid;
  border-right:1px #ff5722 solid;
  border-radius: 4rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 8rpx 6rpx;
  text-align: center;
}
.container .elem .butn:after{
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  transform: translateY(.5);
  background-color: #ff5722;
}
.container .elem .butn:before{
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  transform: translateY(.5);
  background-color: #ff5722;
}

button{
  margin-top: 50rpx;
  background-color: #ff5722;
  color: #fff;
  width: 90%;
}

button:after{
  border: none;
}