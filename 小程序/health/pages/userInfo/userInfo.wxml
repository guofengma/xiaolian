<!--pages/userInfo/userInfo.wxml-->
<view class="container">
  <form>
    <view class="elem">
      <view class="item sex">
        <view class="tit">性别</view>
        <view class="section">
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view class="picker">
              {{array[index]}}
            </view>
          </picker>
        </view>
      </view>
      <view class="item age">
        <view class="tit">年龄</view>
        <input type="number" value="{{age}}" bindblur="bindAgeTap" placeholder="未设置" />
      </view>
      <view class="item">
        <view class="tit">地址</view>
        <input type="text" value="{{address}}" bindblur="bindAddressTap" placeholder="未设置" />
      </view>
    </view>
    <view class="elem">
      <view class="item">
        <view class="tit">手机号</view>
        <input type="number" disabled="true" value="{{phoneno}}" bindblur="bindTelTap" placeholder="未设置" />
        <!--<view class="butn" bindtap="bindSmsTap">{{codemsg}}</view>-->
      </view>
      <!--<view class="line"></view>-->
      <!--<view class="item">
        <view class="tit">验证码</view>
        <input type="number" value="{{number}}" bindblur="bindAddressTap" placeholder="请输入验证码"/>
      </view>-->
    </view>
  </form>
  <button></button>
</view>