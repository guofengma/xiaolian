<!--pages/info/info.wxml-->
<view class="container">
    <view class="content">
        <view class="header">
            成功加入购入车
            <text bindtouchstart="bindDeleteTap" class="delete">删除</text>
        </view>
        <view class="name">伊利纯真酸牛奶</view>
        <view class="guige">规格：250ml</view>
        <view class="money">
            <text class="symbol">¥</text>
            <text class="num">9.9</text>
        </view>
        <view class="total">
            <image bindtouchstart="bindReduleTap" bindtouchend="Toredule" src="{{reduceSrc}}"></image>
            <view class="amount">{{amount}}</view>
            <image bindtouchstart="bindIncreaseTap" bindtouchend="Toincrease" src="{{increaseSrc}}"></image>
        </view>
    </view>
    
</view>
<view class="footer">
    <view class="buy">继续购物</view>
    <view class="cart">前往购物车</view>
</view>
