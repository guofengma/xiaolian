<!--pages/orderList/orderList.wxml-->
<view class="container">
  <view class="noOrder" wx:if="{{!hasOrder}}">
    <image src="../../image/noOrder.png"></image>
    <view class="info">暂无订单</view>
  </view>
  <view class="hasOrder" wx:if="{{hasOrder}}">
    <view class="item" wx:for="{{orderList}}">
      <view class="elem top">
        <view class="time">{{item.time}}</view>
        <view class="classname">{{item.state}}</view>
      </view>
      <view class="center">
        <view class="elem" wx:for="{{item.temp}}" wx:for-item="goods">
          <view class="classname">
            <text class="name">{{goods.name}}</text>
            <text class="amount">x{{goods.amount}}</text>
          </view>
          <view class="classname">¥{{goods.amount * goods.price}}</view>
        </view>
      </view>

      <view class="elem bottom" wx:if="{{item.checkstate == 0}}">
        <view class="check" bindtouchstart="checkView">{{item.checkstate == 0 ? '待核验': ''}}</view>
        <view>共{{item.totalNum}}件商品 ¥{{item.totalPrice}}</view>
      </view>
      <view class="elem bottom" wx:if="{{item.checkstate == 1}}">
        <view class="hasCheck">共{{item.totalNum}}件商品 ¥{{item.totalPrice}}</view>
      </view>
    </view>
  </view>
</view>