/* pages/pay/pay.wxss */
.container{
  height: 100vh;
  background-color: #f7f7f7;
  overflow: hidden;
}

.container .content{
  background-color: #fff;
  margin-top: 20rpx;
  overflow: hidden;
  padding: 0 40rpx;
}
.container .content .tit{
  margin-top: 80rpx;
}

.moneycont{
  margin-top: 20rpx;
  border: 1px #ff5722 solid; 
  height: 190rpx;
  position: relative;
}
.moneycont .num{
  font-size: 60rpx;
  color: #333333;
}
.moneycont .num input{
  height: 72rpx;
  text-align: right;
  padding-right: 30rpx;
  position: absolute;
  bottom: 20rpx;
}
.money image{
  width: 35rpx;
  height: 45rpx;
  margin: 20rpx 0 0 30rpx;
}
.score{
  margin-top: 50rpx;
  text-align: right;
}
.score image{
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}
.score text{
  font-size: 28rpx;
  position: relative;
  top: -8rpx;
}
.info{
  margin-top: 30rpx;
  margin-bottom: 85rpx;
  text-align: right;
  color: #ff5722;
}

button{
  width: 660rpx;
  height: 80rpx;
  margin-top: 100rpx;
  line-height: 80rpx;
  background-color: #ff5722 !important;
}
button:after{
  border: none;
}
.active{
   background-color: #ff5722 !important;
}
.noAble{
   background-color: #dddddd !important;
}
.home{
  position: absolute;
  bottom: 60rpx;
  color: #333333;
  font-size: 34rpx;
  border-bottom: 1px #333333 solid;
  left: 50%;
  transform: translateX(-50%);
}