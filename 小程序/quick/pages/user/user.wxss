/* pages/user/user.wxss */
.header{
  padding: 40rpx;
  background-color: #fff;
  border-top: 1px #e3e3e3 solid;
  border-bottom: 1px #e3e3e3 solid;
  position: relative;
  text-align: center;
}
.avatar{
  border:2rpx #ffffff solid;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  overflow: hidden;
  margin: 0 auto;
}
.avatar image{
  width: 100%;
  height: 100%;
}

.submit{
    width: 180rpx;
    height: 40rpx;
    border: 1rpx solid #ff5722;
    margin: 20rpx auto;
    line-height: 40rpx;
    color: #ff5722;
    background-color: #fff;
    font-size: 30rpx;
    border-radius: 0;
}

.submit:after{
    border-radius: 0;
}

.submit-button-hover{
    background-color: #ff5722;
    color: #fff;
}

.order{
    background-color: #fff;
    height: 90rpx;
    margin-top: 40rpx;
    border-radius: 0;
    font-size: 30rpx;
    line-height: 90rpx;
}

.order:after{
    border-right: none;
    border-left: none;
    border-radius: 0;
}

/** 添加自定义button点击态样式类**/
.other-button-hover {
  background-color: #ff5722;
  color: #fff;
}
