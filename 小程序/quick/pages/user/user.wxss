/* pages/user/user.wxss */
.header{
  padding: 40rpx 0 148rpx;
  background-color: #fff;
  border-top: 1px #e3e3e3 solid;
  border-bottom: 1px #e3e3e3 solid;
  position: relative;
  text-align: center;
}
.header .bg{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}
.avatar{
  border:2rpx #ffffff solid;
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  overflow: hidden;
  margin: 0 auto;
  position: relative;
  z-index: 100;
}
.avatar image{
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 100;
}

.submit{
    width: 230rpx;
    height: 60rpx;
    border: 1rpx solid #0D8FEF;
    margin: 40rpx auto 0;
    line-height: 60rpx;
    color: #0D8FEF;
    background-color: #fff;
    font-size: 30rpx;
    border-radius: 6px;
    position: relative;
    z-index: 10;
}

.submit:after{
    border-radius: 0;
}

.submit-button-hover{
    background-color: #0D8FEF;
    color: #fff;
}
.mobile{
    margin-top: 20rpx;
    font-size: 28rpx;
}
.nav{
    position: absolute;
    bottom: 20rpx;
    display: flex;
    flex-direction: row;
    width: 100%;
}
.nav .elem{
    width: 50%;
    position: relative;
}
.nav .elem:first-of-type:after{
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    width: 1px;
    -webkit-transform: scaleX(0.5);
    transform: scaleX(0.5);
    background-color: #ddd;
}
.nav .elem .num{
    color: #0D8FEF;
    font-size: 40rpx;
}
.nav .elem .name{
    margin-top: 14rpx;
    font-size: 28rpx;
}
.order{
    background-color: #fff;
    height: 90rpx;
    margin-top: 20rpx;
    border-radius: 0;
    font-size: 30rpx;
    line-height: 90rpx;
}

.order:after{
    border-right: none;
    border-left: none;
    border-radius: 0;
}

/** 添加自定义button点击态样式类**/
.other-button-hover {
  background-color: #0D8FEF;
  color: #fff;
}
