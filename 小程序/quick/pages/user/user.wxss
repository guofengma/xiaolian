/* pages/user/user.wxss */
.container{
  height: 100vh;
  background-color: #f7f7f7;
}
.header{
  padding: 40rpx;
  background-color: rgba(255, 87, 34, .7);
  color: #fff;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items: center;
  border-top: 1px #e3e3e3 solid;
  border-bottom: 1px #e3e3e3 solid;
  position: relative;
}
.avatar{
  border:1px #ffffff solid;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
}
.avatar image{
  width: 100%;
  height: 100%;
}

.info{
  width: 40%;
  margin-left: 30rpx;
}
.info .nickName{
  font-size: 34rpx;
  line-height: 60rpx;
}
.info .infoAs{
  width: 360rpx;
}
.info .infoAs .age{
  width: 100%;
  font-size: 24rpx;
  line-height: 48rpx;
}
.info .infoAs{
  margin-top: 5rpx;
  line-height: 35rpx;
}
.info .infoAs .sex{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}

.content{
  margin-top: 20rpx;
  /*border-top: 1px #e3e3e3 solid;*/
}

.content .item{
  padding: 20rpx 40rpx;
  position: relative;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
  height: 55rpx;
}
.content .score{
  position:absolute;
  right: 20rpx;
  top: 50%;
  font-size: 28rpx;
  transform: translateY(-50%);
}
.content .item:nth-of-type(1):after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 40rpx;
    right: 0;
    background: #dddddd;
    height: 1px;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}
.content .item:nth-of-type(2):after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 40rpx;
    right: 0;
    background: #dddddd;
    height: 1px;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}
.content .item:last-of-type{
  margin-top: 20rpx;
  height: 75rpx;
}

.content .item .logo{
  width: 45rpx;
  height: 45rpx;
  margin-right: 35rpx;
}

.content .item .logo image{
  width: 100%;
  height: 100%;
}
.content .item .name .nameInfo{
  margin:4rpx 0;
}
.content .item .name .nameInfo2{
  color: #ff5722;
  line-height: 45rpx;
}
.content .item .name .nameInfo .fir{
  margin-right: 14rpx;
}
.arrow{
  width: 20rpx;
  height: 30rpx;
  position:absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -15rpx;
}

