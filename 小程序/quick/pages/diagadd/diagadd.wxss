/* pages/diagadd/diagadd.wxss */
.tip {
  text-align: center;
  background-color: whitesmoke;
  width: 100%;
  height: 40rpx;
  font-size: 32rpx;
  color: #ff5722;
}
.container {
  height: 100vh;
  background-color: rgba(255, 87, 34, .7);
  overflow: hidden;
  font-size: 30rpx;
  color: #333333;
}
.container .title{
  color: white;
  text-align: center;
  font-size: 24rpx;
  line-height: 90rpx;
  opacity: 0;
}
.content{
  background-color: white;
  height: 95%;
  margin:30rpx 30rpx 30rpx;
  border-radius: 4px;
  -webkit-border-radius: 4px;
  box-shadow:-2px 0 10px #ef6237,  
    2px 0 10px #ef6237, 
    0 -2px 10px #ef6237,  
    0 2px 10px #ef6237;   
  -webkit-box-shadow:-2px 0 10px #ef6237,  
    2px 0 10px #ef6237, 
    0 -2px 10px #ef6237,  
    0 2px 10px #ef6237;  
}

.content .head{
  color: #ff5722;
  text-align: center;
  line-height: 90rpx;
  border-bottom: 1rpx #dddddd dashed;
}
.content .cenCont{
  width: 80%;
  margin: 20rpx auto;
}
.content .cenCont .elem{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  margin-top: 50rpx;
}

.content .cenCont .elem .tit{
  margin-right: 20rpx;
}


.content .cenCont .elem:not(.types):not(.evalues):after{
  content: "";
  position: absolute;
  left: 76rpx;
  right: 0;
  bottom: 0;
  height: 1px;
  background-color: #dddddd;
  -webkit-transform: translateY(.5);
  transform: translateY(.5);
}

.content .cenCont .hospital{
  padding-bottom: 8rpx;
}
.content .cenCont .hospital .picker{
  width:430rpx;
}
.content .cenCont .hospital .arrow{
  width: 20rpx;
  height: 32rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}
.content .cenCont .types{
  align-items:flex-start;
}
.content .cenCont .elem .typecont{
  width: 80%;
}
.content .cenCont .elem .evalcont{
  width: 60%;
}
.content .cenCont .types .typecont .typeItem{
  width: auto;
  /*padding: 3rpx 0;*/
  text-align: center;
  display: inline-block;
  margin-bottom: 20rpx;
  margin-right: 16rpx;
  background: rgba(221, 221, 221, .5);
  border-radius: 4rpx;
  color: #333333;
}

.content .cenCont .evalues .evalcont .evalItem{
  display: inline-block;
}

.content .cenCont .evalues .evalcont .evalItem image{
  width: 40rpx;
  height: 38rpx;
}

.content .cenCont .elem .typecont .text{
  display: inline-block;
  padding: 0 10rpx;
  height: 50rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  border-radius: 4px;
}

.content .cenCont .evalues{
  margin-top: 50rpx;
  margin-bottom: 30rpx;
}

.content .cenCont .evalues .evalcont{
  width: 64%;
}
.content .cenCont .evalues .evalcont .evalItem{
  margin-right: 26rpx;
}

.content .description{
    margin-top: 30rpx;
}

.content .cenCont .descont .desc{
  border: 1rpx #dddddd solid;
  width: 86%;
  margin-left: 13%;
  min-height: 180rpx;
  margin-top: 12rpx;
}

.content .cenCont .subBtn{
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #ff5722;
  color: white;
  margin-top: 50rpx;
}

.content .cenCont .subBtn:after{
  border: none;
}

.typeAct{
  width: auto;
  text-align: center;
  display: inline-block;
  margin-bottom: 20rpx;
  margin-right: 16rpx;
  background: rgba(255, 87, 34, .5);
  border-radius: 4rpx;
  color: #ff5722;
}