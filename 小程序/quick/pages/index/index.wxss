.container{
    padding: 0 40rpx;
    background-color: #f8f8f8;
}

.container .content{
    
}
.container .content .rule{
    background-color: #fff;
    border: 1px #eeeeee solid;
    border-radius: 5px;
}
.container .content .rule .rule_top{
    text-align: center;
    color: #0D8FEF;
    padding-top: 50rpx;
    font-size: 34rpx;
    
}
.container .content .rule_content{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    padding: 70rpx 0 100rpx;
}
.container .content .rule_content .rule_item{
    text-align: center;
}
.container .content .rule_content .rule_item image{
    width: 124.8rpx;
    height: 105.2rpx;
} 
.container .content .rule_content .rule_item .rule_tit{
    font-size: 28rpx;
    line-height: 51rpx;
    color: #333333;
}
.container .content .rule_content .rule_item .rule_info{
    font-size: 24rpx;
    color: #999999;
}
.container .content .buy{
    margin-top: 45rpx;
    text-align: center;
    height: 330rpx;
    position: relative;
    border: 1px #eeeeee solid;
    border-radius: 5px;
    background-color: #fff;
    
}
.container .content .shadow{
    box-shadow:-2px 0 10px #999999,  
    2px 0 10px #999999, 
    0 -2px 10px #999999,  
    0 2px 10px #999999;   
  -webkit-box-shadow:-2px 0 10px #999999,  
    2px 0 10px #999999, 
    0 -2px 10px #999999,  
    0 2px 10px #999999;  
}
