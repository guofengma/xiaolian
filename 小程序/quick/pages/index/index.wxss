/**index.wxss**/

.container{
    padding: 0 30rpx;
}

.container .content{
    background-color: #fff;
}

.container .content .buy{
    margin-top: 45rpx;
    text-align: center;
    height: 330rpx;
    position: relative;
    border-left: 1rpx solid #dddddd;
    border-right: 1rpx solid #dddddd;

    
}
.container .content .shadow{
    box-shadow:-2px 0 10px #999999,  
    2px 0 10px #999999, 
    0 -2px 10px #999999,  
    0 2px 10px #999999;   
  -webkit-box-shadow:-2px 0 10px #999999,  
    2px 0 10px #999999, 
    0 -2px 10px #999999,  
    0 2px 10px #999999;  
}
.container .content .buy:before{
    position: absolute;
    content: "";
    height: 1px;
    background-color: #dddddd;
    top: 0;
    left: 0;
    right: 0;
    transform: scaleY(.5);
}
.container .content .buy:after{
    position: absolute;
    content: "";
    height: 1px;
    background-color: #dddddd;
    bottom: 0;
    left: 0;
    right: 0;
    transform: scaleY(.5);
}

.container .content .buy image{
    width: 200rpx;
    height: 200rpx;
    margin-top: 50rpx;
}

