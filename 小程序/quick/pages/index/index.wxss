/**index.wxss**/

.container{
    padding: 0 40rpx;
    background-color: #f8f8f8;
}

.container .content .rule{
    background-color: #fff;
    border: 1px #eeeeee solid;
    border-radius: 5px;
}
.container .content .rule .rule_top{
    text-align: center;
    color: #0D8FEF;
    padding-top: 50rpx;
    font-size: 34rpx;
    
}
.container .content .rule_content{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    padding: 70rpx 0 100rpx;
}
.container .content .rule_content .rule_item{
    text-align: center;
}
.container .content .rule_content .rule_item image{
    width: 120rpx;
    height: 120rpx;
} 
.container .content .rule_content .rule_item .rule_tit{
    font-size: 28rpx;
    line-height: 51rpx;
    color: #333333;
}
.container .content .rule_content .rule_item .rule_info{
    font-size: 24rpx;
    color: #999999;
}
.container .content .buy{
    margin-top: 45rpx;
    text-align: center;
    height: 330rpx;
    position: relative;
    border: 1px #eeeeee solid;
    border-radius: 5px;
    background-color: #fff;
    
}
.container .content .shadow{
    box-shadow:-2px 0 10px #999999,  
    2px 0 10px #999999, 
    0 -2px 10px #999999,  
    0 2px 10px #999999;   
  -webkit-box-shadow:-2px 0 10px #999999,  
    2px 0 10px #999999, 
    0 -2px 10px #999999,  
    0 2px 10px #999999;  
}



.container .content .buy image{
    width: 128rpx;
    height: 128rpx;
}
.container .content .buy .store{
   text-align: left;
}
.container .content .buy .store{
   display: flex;
   flex-direction: row;
   justify-content: flex-start;
   align-items: center;
   font-size: 28rpx;
   padding: 30rpx 0 0 36rpx;
   color: #999999;
   position: relative;
   z-index: 1000;
}
.container .content .buy .bar{
   display: flex;
   flex-direction: row;
   justify-content: space-between;
}
.container .content .buy .store image{
   width: 50rpx;
   height: 49rpx;
   margin-right: 8rpx;
}
.container .content .buy .cart{
   position: absolute;
   top: 30rpx;
   right: 30rpx;
   z-index: 100;
}
.container .content .buy .cart image{
   width: 50rpx;
   height: 50rpx;
   position: relative;
}
.container .content .buy .cart .num{
   position: absolute;
   right: -16rpx;
   top: -16rpx;
   background-color: #F02E51;
   width: 38rpx;
   height: 38rpx;
   line-height: 40rpx;
   text-align: center;
   border-radius: 20rpx;
   font-family: PingFangSC-Regular;
   color: #FFFFFF;
   letter-spacing: -0.41px;
}
.container .content .buy .scan_tit{
    font-size: 34rpx;
    color: #0D8FEF;
    margin-bottom: 30rpx;
}
.container .content .buy .scanCode{
    position: absolute;
    left: 50%;
    top: 62%;
    transform: translate(-50%, -50%);
    z-index: 2;
}

.container .content .buy .scanCode .scan_img{
   position: relative;
}
.container .content .buy .scanCode .num{
   position: absolute;
   right: -16rpx;
   top: -16rpx;
   background-color: #F02E51;
   width: 40rpx;
   height: 40rpx;
   border-radius: 20rpx;
   font-family: PingFangSC-Regular;
   color: #FFFFFF;
   letter-spacing: -0.41px;
}

.container .content .buy .homebg{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
}

