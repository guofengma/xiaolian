<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lxg.springboot.mapper.DiagnosisMapper">

	<insert id="save" parameterType="com.lxg.springboot.model.Diagnosis">
		insert into diagnosis(diagnosisid,openid,datetime,symptom,amt,hospital,doctor,evaluate,label)
		values (#{diagnosisid},#{openid},#{datetime},#{symptom},#{amt},#{hospital},#{doctor},#{evaluate},#{label})
	</insert>
	
	<update id="update" parameterType="com.lxg.springboot.model.User">
		 update diagnosis 
		 set diagnosisid=#{diagnosisid},openid=#{openid},
		 datetime=#{datetime},symptom=#{symptom},amt=#{amt},hospital=#{hospital} 
		 where openid=#{openid}
	</update>
	
	<select id="query" parameterType="String" resultType="com.lxg.springboot.model.User">
		select * from user 
		where openid=#{openid}
	</select>	

</mapper>  