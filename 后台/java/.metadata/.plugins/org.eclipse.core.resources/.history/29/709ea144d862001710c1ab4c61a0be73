<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lxg.springboot.mapper.CartMapper">

	<insert id="save" parameterType="com.lxg.springboot.model.Cart">
		insert into cart(openid,code,amount)
		values (#{openid},#{code},#{amount})
	</insert>
	
	<select id="querybypage" parameterType="com.lxg.springboot.model.Cart" resultType="com.lxg.springboot.model.Cart">
		select * from cart
		where openid=#{openid} 
	</select>	

	 <delete id="delete" parameterType="com.lxg.springboot.model.Cart">
        delete from cart where openid=#{openid} and code=#{code}
    </delete>

</mapper>  