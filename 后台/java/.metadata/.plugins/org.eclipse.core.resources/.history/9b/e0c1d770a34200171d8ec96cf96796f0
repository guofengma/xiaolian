<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lxg.springboot.mapper.DiagnosisMapper">

	<resultMap id="DiagnosislistMap" type="com.lxg.springboot.model.Diagnosis">
            <result column="diagnosisid" property="diagnosisid"/>
            <result column="openid" property="openid"/>
            <result column="datetime" property="datetime"/>
            <result column="symptom" property="symptom"/>
            <result column="amt" property="amt"/>
            <result column="hospital" property="hospital"/>
            <result column="doctor" property="doctor"/>
            <result column="evaluate" property="evaluate"/>
            <result column="label" property="label"/>                                              
    </resultMap>

	<insert id="save" parameterType="com.lxg.springboot.model.Diagnosis">
		insert into diagnosis(diagnosisid,openid,datetime,symptom,amt,hospital,doctor,evaluate,label)
		values (#{diagnosisid},#{openid},#{datetime},#{symptom},#{amt},#{hospital},#{doctor},#{evaluate},#{label})
	</insert>
		
	<select id="querybyid" parameterType="com.lxg.springboot.model.Diagnosis" resultType="com.lxg.springboot.model.Diagnosis">
		select * from diagnosis 
		where diagnosisid=#{diagnosisid} and openid=#{openid} 
	</select>	
	
	<select id="querybypage" parameterType="" resultType="">
		select * from diagnosis 
		where diagnosisid=#{diagnosisid} and openid=#{openid} 
		limit #{page}*5,5
	</select>	

</mapper>  