<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lxg.springboot.mapper.CVSOrderMapper">

	<insert id="save" parameterType="com.lxg.springboot.model.CVSOrder">
		insert into order(openid,orderNo,time,state)
		values (#{openid},#{orderNo},#{time},#{state})
	</insert>
	
	<update id="update" parameterType="com.lxg.springboot.model.Order">
		 update orders 
		 set state=#{state}
		 where orderNo=#{orderNo}
	</update>
	
	<select id="savegood" parameterType="com.lxg.springboot.model.OrderGood">
		insert into ordergood(code,orderNo,amount)
		values (#{code},#{orderNo},#{amount})
	</select>
	
</mapper>  